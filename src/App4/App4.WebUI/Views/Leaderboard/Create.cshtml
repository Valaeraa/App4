@model App4.WebUI.ViewModels.LeaderboardViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Leaderboard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Leaderboard.UserId" class="control-label"></label>
                <select asp-for="Leaderboard.UserId" class="form-control"
                        asp-items="@(new SelectList(Model.Users, "Id", "FullName"))">
                    <option>Select User</option>
                </select>
                <span asp-validation-for="Leaderboard.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leaderboard.Score" class="control-label"></label>
                <input asp-for="Leaderboard.Score" class="form-control" />
                <span asp-validation-for="Leaderboard.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leaderboard.GamesPlayed" class="control-label"></label>
                <input asp-for="Leaderboard.GamesPlayed" class="form-control" />
                <span asp-validation-for="Leaderboard.GamesPlayed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
